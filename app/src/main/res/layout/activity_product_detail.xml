<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#81C784"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backpage"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:tint="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="Products    -->"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Products Detail"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="More"
            android:tint="#000000" />
    </LinearLayout>

    <!-- Product Image with Border and Rounded Corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/transparent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ao"
                android:scaleType="centerCrop"
                android:contentDescription="Tea Set Image" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: Tea Set"
            android:textSize="16sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 120.000Ä‘"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: A tea set"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/product_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technical Specification: N/A"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textColor="#FFFFFF"
            android:background="#81C784"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Chat Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#81C784"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#81C784"
            android:drawableLeft="@drawable/chat_icon"
            android:drawablePadding="8dp"
            android:text="Chat"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>