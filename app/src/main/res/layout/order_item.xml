<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Order Id -->
            <TextView
                android:id="@+id/orderIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: #12345"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Order date -->
            <TextView
                android:id="@+id/orderDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2025-06-16" />

            <!--        <TextView-->
            <!--            android:id="@+id/orderStatusText"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Status: Delivered"-->
            <!--            android:textColor="@android:color/holo_green_dark"/>-->


            <!-- Order total -->
            <TextView
                android:id="@+id/orderTotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 1,000,000Ä‘"
                android:textStyle="bold" />

            <!-- Product List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:nestedScrollingEnabled="false"
                android:paddingStart="40dp"
                tools:listitem="@layout/order_detail_item" />

            <!-- Address Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Checkbox to use registered address -->
                <CheckBox
                    android:id="@+id/cb_useAccountAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use my account registered address" />

                <!-- Editable Address Field -->
                <EditText
                    android:id="@+id/txt_shippingMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your shipping address"
                    android:inputType="textPostalAddress"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- Shipping Method Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Shipping Method:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <RadioGroup
                android:id="@+id/shippingMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioStandardShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard Shipping (3-5 days)" />

                <RadioButton
                    android:id="@+id/radioExpressShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Express Shipping (1-2 days)" />

                <RadioButton
                    android:id="@+id/radioPickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Pickup" />
            </RadioGroup>

            <!-- Payment Buttons (Vertical Layout) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btn_payInCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_700"
                    android:text="Pay in Cash"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_VNPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/purple_700"
                    android:text="VNPay"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
