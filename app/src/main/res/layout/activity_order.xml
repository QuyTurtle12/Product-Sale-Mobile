<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderActivity">

<!--     Top Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9BD400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="63dp"
                android:layout_height="0dp"
                android:contentDescription="Back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="@id/btn_back"
                app:layout_constraintBottom_toBottomOf="@id/btn_back"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/btn_showMore"
                android:layout_width="36dp"
                android:layout_height="39dp"
                android:contentDescription="More"
                app:srcCompat="@drawable/more_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_back"
                app:layout_constraintBottom_toBottomOf="@id/btn_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView -->
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/orderRecyclerView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:padding="8dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/cardView"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/viewHome"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        tools:listitem="@layout/order_item" />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/viewHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/order_item" />

    <!-- Bottom Navigation -->
    <View
        android:id="@+id/viewHome"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/accent_color"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Home -->
    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/home_icon"
        android:contentDescription="@string/home_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toStartOf="@id/viewHome" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        app:layout_constraintStart_toStartOf="@id/home_icon"
        app:layout_constraintEnd_toEndOf="@id/home_icon"
        app:layout_constraintTop_toBottomOf="@id/home_icon" />

    <!-- Product -->
    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/product_icon"
        android:contentDescription="@string/product_icon"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/home_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product"
        app:layout_constraintTop_toBottomOf="@id/product_icon"
        app:layout_constraintStart_toStartOf="@id/product_icon"
        app:layout_constraintEnd_toEndOf="@id/product_icon" />

    <!-- Chat -->
    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/chat_icon"
        android:contentDescription="@string/chat_icon"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/product_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        app:layout_constraintTop_toBottomOf="@id/chat_icon"
        app:layout_constraintStart_toStartOf="@id/chat_icon"
        app:layout_constraintEnd_toEndOf="@id/chat_icon" />

    <!-- Order -->
    <ImageView
        android:id="@+id/order_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/order_icon"
        android:contentDescription="@string/order_icon"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/chat_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order"
        app:layout_constraintTop_toBottomOf="@id/order_icon"
        app:layout_constraintStart_toStartOf="@id/order_icon"
        app:layout_constraintEnd_toEndOf="@id/order_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
