    <!-- Navigation Bar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderRecyclerView"
        android:layout_width="405dp"
        android:layout_height="545dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/viewHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/order_item" />

    <View
        android:id="@+id/viewHome"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/accent_color"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Home Icon -->
    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/home_icon"
        android:contentDescription="@string/home_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toStartOf="@id/viewHome" />

    <!-- Home Icon Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        app:layout_constraintStart_toStartOf="@id/home_icon"
        app:layout_constraintEnd_toEndOf="@id/home_icon"
        app:layout_constraintTop_toBottomOf="@id/home_icon" />

    <!-- Product Icon -->
    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/product_icon"
        android:contentDescription="@string/product_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/home_icon" />

    <!-- Product Icon Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product"
        app:layout_constraintStart_toStartOf="@id/product_icon"
        app:layout_constraintEnd_toEndOf="@id/product_icon"
        app:layout_constraintTop_toBottomOf="@id/product_icon" />

    <!-- Chat Icon -->
    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/chat_icon"
        android:contentDescription="@string/chat_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/product_icon" />

    <!-- Chat Icon Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        app:layout_constraintStart_toStartOf="@id/chat_icon"
        app:layout_constraintEnd_toEndOf="@id/chat_icon"
        app:layout_constraintTop_toBottomOf="@id/chat_icon" />

    <!-- Order Icon -->
    <ImageView
        android:id="@+id/order_icon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/order_icon"
        android:contentDescription="@string/order_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="44dp"
        app:layout_constraintTop_toTopOf="@id/viewHome"
        app:layout_constraintStart_toEndOf="@id/chat_icon" />

    <!-- Chat Icon Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order"
        app:layout_constraintStart_toStartOf="@id/order_icon"
        app:layout_constraintEnd_toEndOf="@id/order_icon"
        app:layout_constraintTop_toBottomOf="@id/order_icon" />


