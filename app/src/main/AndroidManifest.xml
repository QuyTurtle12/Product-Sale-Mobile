<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.product_sale_app">


    <!-- Only need this once -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ProductSaleApp"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <activity android:name=".ui.map.StoreMapActivity"
            android:parentActivityName=".ui.chat.ChatListActivity" />

        <!-- Show list of chat boxes -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProductSaleApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- Individual chat screen -->
        <activity android:name=".ui.chat.ChatListActivity"
            android:theme="@style/Theme.ProductSaleApp"/>
        <activity android:name=".ui.chat.ChatActivity"
            android:theme="@style/Theme.ProductSaleApp"/>
    </application>

</manifest>
